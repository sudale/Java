package 조건문;

import java.util.Scanner;

public class 변수범위 {

	public static void main(String[] args) {
		// 변수의 범위는 코드블록{} 으로 결정
		{
			int value = 0;
			System.out.println(value);
		}
		
		Scanner scanner = new Scanner(System.in);
		
		for(int i=0; i<4; i++) {
			System.out.println(i);
		}
		System.out.println(i);

	}

}
